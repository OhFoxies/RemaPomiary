<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners"
    android:orientation="vertical"
    android:layout_width="350dp"

    android:padding="15dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/flatMain"
    >


    <TextView
        android:id="@+id/templateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Szablon - "
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/templateDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Data utworzenia:"
            android:textSize="18sp"

            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/templateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="18sp"

            android:text="2024-15-06" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/itemFlatControls"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/templateDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Szablon mieszkania, kliknij aby przejsc do jego edycji. "
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/templateDelete"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#f23022"
                android:text="🗑️ Usuń" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
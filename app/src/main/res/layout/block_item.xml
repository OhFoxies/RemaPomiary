            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ðŸ“ Lokalizacja:"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/blockCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:layout_marginStart="25dp"
            android:text="TU LOKALIZACJA " />
        <TextView
            android:id="@+id/blockStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:layout_marginStart="25dp"
            android:text="TU LOKALIZACJA " />
        <TextView
            android:id="@+id/blockNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="25dp"
            android:text="TU LOKALIZACJA " />
        <TextView
            android:id="@+id/blockPostalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="25dp"
            android:text="TU LOKALIZACJA " />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/blockClientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§ Zleceniodawca"
            android:textSize="18sp"

            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/blockClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="18sp"

            android:text="Name" />
        <TextView
            android:id="@+id/blockClientAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:textSize="18sp"

            android:text="Address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/itemBlockControls"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/blockDelete"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#f23022"
            android:text="ðŸ—‘ï¸ UsuÅ„" />

        <Button
            android:id="@+id/blockEdit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#3FAB1F"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/round_corners"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Nazwa Pokoju" />

        <Button
            android:id="@+id/deleteRoomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="USUŃ POKÓJ"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/measurementsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/measurementsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="2"
                android:text="Urządzenie" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="1.5"
                android:text="Wyłącznik" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="1"
                android:text="Typ" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="1"
                android:text="Amper" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="1"
                android:text="Wartość" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="2"
                android:text="Uwagi" />

            <TextView
                style="@style/MeasurementHeader"
                android:layout_weight="0.5"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/emptyMeasurementsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Brak pomiarów. Dodaj nowy pomiar poniżej."
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/measurementsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/measurement_row_item" />

    </LinearLayout>

    <Button
        android:id="@+id/addMeasurementBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="➕ Dodaj pomiar"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        android:textColor="@android:color/white" />

</LinearLayout>